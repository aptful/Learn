<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mypageScreen"
    android:background="#fff8dc" >

    <!--帯-->
    <!--きーわーど-->
    <TextView
        android:id="@+id/mypageScreen"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="まいぺーじ"
        android:textStyle="bold"
        android:textColor="#696969"
        android:textSize="30dp" />

    <!--オレンジのライン-->
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:id="@+id/line_orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        android:background="#ff7f50"/>

    <!--設定マーク-->
    <ImageButton
        android:id="@+id/configImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/config"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="-80dp"/>

    <!--検索マーク-->
    <ImageButton
        android:id="@+id/searchImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/search"
        android:layout_gravity="end"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="-67dp"/>

    <!--メガホンマーク-->
    <ImageButton
        android:id="@+id/megaphoneImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/megaphone"
        android:layout_marginTop="-75dp" />


    <FrameLayout
        android:id="@+id/mypageframe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!--テキストボックス-->
        <TextView
            android:id="@+id/text"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="からふるの公式サイト・SNSをチェックしてみよう!"
            android:layout_marginTop="180dp"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <!--ショップ-->
        <ImageButton
            android:id="@+id/shopView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/shop"
            android:layout_gravity="center"
            android:layout_marginTop="-260dp"/>

        <TextView
            android:id="@+id/shopText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="しょっぷ"
            android:textColor="#ff7f50"
            android:layout_gravity="center"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="-170dp"
            android:textSize="20dp"/>

        <!--クーポン-->
        <ImageButton
            android:id="@+id/couponView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/coupon"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="260dp"/>


        <TextView
            android:id="@+id/couponText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="くーぽん"
            android:textColor="#ff7f50"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="420dp"
            android:textSize="20dp"/>

        <!--キーワード-->
        <ImageButton
            android:id="@+id/keywordView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/keyword"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="260dp"/>

        <TextView
            android:id="@+id/keywordImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="きーわーど"
            android:textColor="#ff7f50"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="420dp"
            android:textSize="20dp"/>

        <!--公式サイト-->
        <ImageButton
            android:id="@+id/official"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/official"
            android:layout_marginRight="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="250dp"/>

        <!--情報提供-->
        <ImageButton
            android:id="@+id/info"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@drawable/info"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"
            android:layout_marginTop="250dp"/>

        <!--Twitter-->
        <ImageButton
            android:id="@+id/twitter"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/twitter"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="250dp"/>

        <!--Instagram-->
        <ImageButton
            android:id="@+id/instagram"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/instagram"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="250dp"/>






    </FrameLayout>


</LinearLayout>
