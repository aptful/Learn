<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".signupThree"
    android:background="#fff8dc"
    android:textColor="#fff8dc">

    <!--作成者:綾部，井口-->
    <!--帯-->
    <!--    新規登録画面（3/3）の文字-->
    <TextView
        android:id="@+id/signupOneLabel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="#ff7f50"
        android:gravity="center"
        android:text="新規登録画面（3/3）"
        android:textSize="22dp"
        android:textColor="#fff8dc"/>

    <!--完了ボタン-->
    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="-75dp"
        android:layout_marginRight="12dp"
        android:backgroundTint="#fff8dc"
        android:text="完了"
        android:textColor="#6495ed"
        android:textSize="16dp"
        />


    <!--入力内容確認画面テキスト-->
    <TextView
        android:id="@+id/looksignupText"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp"
        android:gravity="center_vertical"
        android:text="入力内容確認画面"
        android:textColor="#696969"
        android:textStyle="bold"/>

    <!--IDテキスト-->
    <TextView
        android:id="@+id/ID_signupText"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="40dp"
        android:gravity="center_vertical"
        android:text="   ID"
        android:textSize="20dp"
        android:textColor="#fff8dc"
        android:background="@drawable/black_flame_back_orange"/>


    <!--ID入力内容-->
    <TextView
        android:id="@+id/ID_edit_signupText"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="-31dp"
        android:gravity="center_vertical"
        android:text="   "
        android:textSize="20dp"
        android:textColor="#696969"
        android:background="@drawable/black_flame_back_cream"/>

    <!--パスワードテキスト-->
    <TextView
        android:id="@+id/password_signupText"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="40dp"
        android:gravity="center_vertical"
        android:text="  パスワード"
        android:textSize="20dp"
        android:textColor="#fff8dc"
        android:background="@drawable/black_flame_back_orange"/>


    <!--パスワード入力内容-->
    <TextView
        android:id="@+id/password_edit_signupText"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="-31dp"
        android:gravity="center_vertical"
        android:text="   "
        android:textSize="20dp"
        android:textColor="#696969"
        android:background="@drawable/black_flame_back_cream"/>

    <!--生年月日テキスト-->
    <TextView
        android:id="@+id/birthday_signupText"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="40dp"
        android:gravity="center_vertical"
        android:text="  生年月日"
        android:textSize="20dp"
        android:textColor="#fff8dc"
        android:background="@drawable/black_flame_back_orange"/>


    <!--生年月日入力内容-->
    <TextView
        android:id="@+id/birthday_edit_signupText"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="-31dp"
        android:gravity="center_vertical"
        android:text=" "
        android:textSize="20dp"
        android:textColor="#696969"
        android:background="@drawable/black_flame_back_cream"/>


    <!--キーワードテキスト-->
    <TextView
        android:id="@+id/keywordText"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:gravity="center_vertical"
        android:text="   キーワード"
        android:textColor="#696969"
        android:textStyle="bold"/>


    <!--キーワード内容確認-->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#696969"
            android:textStyle="bold">
            <ListView
                android:id="@+id/favKeywordText"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:textColor="#696969"
                android:textStyle="bold"
                android:textSize="10sp" />
        </LinearLayout>

    </ScrollView>



    <!--利用規約テキスト-->
    <TextView
        android:id="@+id/ruleText"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:gravity="center_vertical"
        android:text="   利用規約"
        android:textColor="#696969"
        android:textStyle="bold"
        />


    <ScrollView
        android:layout_width="280dp"
        android:layout_height="130dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <!--利用規約-->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="280dp"
            android:layout_height="450dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/rule__1_" />
        </LinearLayout>

    </ScrollView>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=" 利用規約に同意する"
        android:checked="false"
        android:textColor="#696969"
        android:textStyle="bold"
        tools:ignore="OnClick,UsingOnClickInXml" />


    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="170dp"
        android:backgroundTint="#6495ed"
        android:text="キャンセル"
        android:textColor="#fff8dc"
        android:textSize="22sp" />
</LinearLayout>

<!--    android:text="@string/keyword"-->